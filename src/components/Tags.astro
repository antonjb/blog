---
interface Props {
    tags: string[]
}

const { tags } = Astro.props

function kebabCase(str: string): string {
    return str
        .toLowerCase()
        .replace(/\s+/g, '-')
        .replace(/[^\w-]+/g, '')
}
---

{
    tags.length > 0 && (
        <ul class="tags">
            {tags.map((tag) => (
                <li>
                    <a href={`/tags/${kebabCase(tag)}`}>{tag}</a>
                </li>
            ))}
        </ul>
    )
}

<style>
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .tags a {
        display: block;
        padding: 0.3rem 1rem;
        background-color: #eee;
        border-radius: 0.5rem;
        color: inherit;
        font-size: 0.85rem;
        text-decoration: none;
    }

    .tags a:hover {
        background-color: var(--color-primary);
        transition: background-color 0.2s linear;
    }
</style>
